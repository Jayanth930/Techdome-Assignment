{
    "compilerOptions": {
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*"]
      },
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "resolveJsonModule": true ,
      "typeRoots": ["./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["dist"]
  }
  